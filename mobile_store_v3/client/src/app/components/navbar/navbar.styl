.wrap
	width: 100%
	height:185px
	position: relative
	/*border:2px solid black*/

.container
	background: #A9A9A9
	width: 100%
	height:80px

.navbar_home,
.navbar_details,
.navbar_contact
	background: grey
	width: 120px
	height: 50px
	/*border-radius: 10px*/
	display: inline-block
	margin:10px 10px 0 0
	text-align:center
	text-transform:uppercase
	font-size: 20px
	padding-top: 10px
	box-shadow: 0 0 10px rgba(0,0,0,1.5)

.navbar_home a,
.navbar_details a,
.navbar_contact a
 	
	text-decoration: none
	color: #333131

li:hover
	background: #BBB5B5

.navbar_wrap
	position:absolute
	/*background: grey*/
	left:5%
	

.search
	position: absolute
	right: 20px
	top: 10%
	
.serch_phone
	width: 300px
	height: 40px
	font-size: 1.5em
	background: #D4CECE
	border-radius:10px
		
.serch_phone:hover,
.serch_phone:focus,
.serch_phone:active
	background:#F4F2F2
	width: 400px
	  	
